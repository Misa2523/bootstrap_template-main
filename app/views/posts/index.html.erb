<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<div class="container">
  <div class="row">

    <!--PCのレイアウトのみカラム4分割に指定-->
    <div class="col-lg-4" style="background-color: orange;">
      <h2>サイドバー</h2>
    </div>

    <!--PCのレイアウトのみカラム8分割に指定-->
    <div class="col-lg-8">
      <table class="table table-striped"> <!--tableのレイアウトを整える-->
        <thead>
          <tr>
            <th>Title</th>
            <th>Body</th>
            <th>Author</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.title %></td>
              <td><%= post.body %></td>
              <td><%= post.author %></td>
              <td><%= link_to 'Show', post %></td>
              <td><%= link_to 'Edit', edit_post_path(post) %></td>
              <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>

<br>

<!-- class: "btn btn-〇〇"　　ボタンのレイアウト、〇〇は色やサイズを指定-->
<%= link_to 'New Post', new_post_path, class: "btn btn-secondary" %>
